<style>
  .inicio {
    display: flex;
    justify-content: center;
    height: 75vh;
    min-height: 500px;
    flex-wrap: wrap;
    margin: 0 50px;
    padding: 40px 0;
  }

  .fade {
    animation: fade linear both;
    animation-timeline: view();
    animation-range: entry 15% cover 25%;
  }

  .elin {
    margin-block: auto;
    margin-inline: 20px;

    :first-child {
      display: flex;
      flex-wrap: wrap;
      align-items: baseline;
    }

    :hover {
      .hand {
        cursor: default;
        animation-play-state: running;
      }
    }
  }

  .secfoto {
    justify-content: right;
  }

  .foto {
    width: 200px;
    height: auto;
    border-radius: 50%;

    filter: drop-shadow(0 0 10px currentColor);
  }

  @keyframes greeting {
    to {
      transform: translateX(5px) translateY(-7px) rotate(30deg);
    }
  }
</style>
