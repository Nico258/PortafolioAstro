---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Hola ðŸ‘‹, soy Nicolas :) Desarrollador Fullstack de Colombia. ðŸ‡¨ðŸ‡´"
    />
    <link
      rel="icon"
      type="image/png"
      href="img/nerd-glasses.png"
    />

    <meta property="og:title" content="Portafolio nicodev" />
    <meta property="og:image" content="img/mi-foto.png" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <script src="../app.js"></script>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Exo2";
    src: url("fonts/Exo2-Medium.ttf") format("truetype");
  }
  :root[data-theme="light"] {
    --bg-color: #d8d7d7;
    --font-color: #161515;
    --background: url(img/fondo-claro.jpg);
  }

  :root[data-theme="dark"] {
    --bg-color: #232222;
    --font-color: #eeecec;
    --transform-option: translateX(100%);
    --background: url(img/fondo-oscurojpg.jpg);
  }

  .icon {
    stroke: var(--font-color);
  }

  body {
    margin: 0;
    font-family: "Exo2", Helvetica, sans-serif;
    box-sizing: border-box;
    background-color: var(--bg-color);
    background-image: var(--background);
    background-repeat: no-repeat;
    background-size: cover;
    color: var(--font-color);

    animation: fade 1500ms ease;
  }

  h1 {
    font-size: 50px;
    margin: 20px 0;
  }

  h2 {
    font-size: 35px;
    padding-bottom: 2px;
  }

  h3 {
    font-size: 30px;
  }

  h4 {
    font-size: 25px;
  }

  h5 {
    font-size: 20px;
  }

  p {
    font-size: 20px;
    text-wrap: balance;
  }

  a {
    all: unset;
    font-style: italic;
    font-weight: bold;
  }

  a:hover {
    cursor: pointer;
  }

  /*Fuentes en el celular*/
  @media only screen and (max-width: 450px) {
    h1 {
      font-size: 40px;
      margin: 20px 0;
    }

    h2 {
      font-size: 30px;
      padding-bottom: 2px;
    }

    h3 {
      font-size: 25px;
    }

    h4 {
      font-size: 22px;
    }

    h5 {
      font-size: 20px;
    }

    p {
      font-size: 15px;
      text-wrap: balance;
    }
  }
</style>
