];

const src = temardos[Math.floor(Math.random() * 9)];
---

<Layout title="nicodev">
  <main>
    <Config />
    <section class="content">
      <h1 data-section="404" data-value="title">PÃ¡gina no encontrada</h1>
      <h4 data-section="404" data-value="text">Pero te dejo con este tema</h4>
      <iframe
        src={src}
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      ></iframe>
    </section>
  </main>
</Layout>

<script>
  import { changeLanguage } from "../app.js";
  document
    .getElementById("select-language")
    ?.addEventListener("change", (event) => {
      let target = event.target as HTMLSelectElement;
      let language = target.value;
      changeLanguage(language);
    });
</script>

<style>
  main {
    margin: 0 50px;
    padding: 35px 0;
  }
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;

    min-height: 62vh;
  }

  h1,
  h4 {
    margin: 0;
  }

  iframe {
    border: 0;
    border-radius: 20px;
    margin-top: 20px;

    aspect-ratio: 16/9;
    width: 60%;
    height: auto;
    min-width: 300px;
    max-width: 700px;
  }
</style>
